    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        // AOS animation
        AOS.init({
            duration: 800,
            once: true,
            easing: 'ease-out-quart',
            offset: 120,
            delay: 100
        });

        // Animated Stars
        const starsContainer = document.getElementById('stars-container');
        for (let i = 0; i < 120; i++) {
            const star = document.createElement('div');
            const layer = `star-layer-${1 + Math.floor(Math.random() * 3)}`;
            star.className = `star ${layer}`;
            star.style.width = `${Math.random() * 2 + 1}px`;
            star.style.height = star.style.width;
            star.style.top = `${Math.random() * 100}vh`;
            star.style.left = `${Math.random() * 100}vw`;
            star.style.setProperty('--duration', `${2 + Math.random() * 3}s`);
            star.style.setProperty('--opacity', Math.random() * 0.7 + 0.3);
            starsContainer.appendChild(star);
        }

        // Animated Comets
        const cometsContainer = document.getElementById('comets-container');
        for (let i = 0; i < 4; i++) {
            const comet = document.createElement('div');
            comet.className = 'comet';
            comet.style.top = `${Math.random() * 80}vh`;
            comet.style.left = `${-100 - Math.random() * 200}px`;
            comet.style.setProperty('--duration', `${8 + Math.random() * 8}s`);
            setTimeout(() => comet.style.opacity = 1, 1000 * i);
            cometsContainer.appendChild(comet);
        }

        // Fade-in effect for cards and glassmorphism
        function revealOnScroll() {
            document.querySelectorAll('.planet-card, .mission-badge, .glassmorphism').forEach(el => {
                const rect = el.getBoundingClientRect();
                if (rect.top < window.innerHeight - 60) {
                    el.classList.add('visible');
                }
            });
        }
        window.addEventListener('scroll', revealOnScroll);
        window.addEventListener('DOMContentLoaded', revealOnScroll);

        // Parallax on Hero Section
        const heroView = document.getElementById('solar-system-view');
        if (heroView) {
            heroView.addEventListener('mousemove', e => {
                const x = (e.offsetX / heroView.offsetWidth - 0.5) * 20;
                const y = (e.offsetY / heroView.offsetHeight - 0.5) * 20;
                heroView.style.transform = `rotateY(${-x}deg) rotateX(${y}deg)`;
            });
            heroView.addEventListener('mouseleave', () => {
                heroView.style.transform = '';
            });
        }

        // Scroll to Top Button
        const scrollTopBtn = document.getElementById('scrollTopBtn');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 300) {
                scrollTopBtn.classList.remove('opacity-0', 'pointer-events-none');
            } else {
                scrollTopBtn.classList.add('opacity-0', 'pointer-events-none');
            }
        });
        scrollTopBtn.addEventListener('click', () => {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });
    </script>
</body>
</html>
